}

const { lang } = Astro.params;

// 2) Page metadata
const title       = "Phase 3 – Leadfluss mit System";
const meta_title  = "Phase 3 – FunnelX Methode";
const description = "So funktioniert Phase 2 im FunnelX Workshop.";

