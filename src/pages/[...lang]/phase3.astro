  { icon: "FaPhone",    name: `<strong>Telefon:</strong> <a href="tel:+4909001234567">+49 0900 1234567</a>` },
  { icon: "FaEnvelope", name: `<strong>E-Mail:</strong> <a href="mailto:hi@funnelx.de">hi@…</a>`            },
